@model  IEnumerable<EntityLayer.Concrete.Dorm>

    <!-- İtem-Card -->
<div class="container mt-5">
    <div class="head p-5">
        <h1>En Popüler Yurtlar</h1>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      @foreach (var item in Model)
      {
        <div class="col">
            <a href="dormitori_main.html">
                <div class="card citi_card_12 ">
                    <img src="https://picsum.photos/200/100" class="card-img-top" alt="...">
                    <div class="card-body citi_card_12">
                        <h5 class="card-title">@item.DormName</h5>
                        <p class="card-text">@item.Description</p>
                       
                    </div>
                </div>
            </a>
        </div>
      }
</div>
</div>
