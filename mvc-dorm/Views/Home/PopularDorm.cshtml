 @model IEnumerable<EntityLayer.Concrete.Dorm>
    
    <!-- İtem-Card -->
<div class="heading mt-4 d-xl-none d-xxl-none ">
    <div class="card card_head_1">
        <div class="card-body">
            <h1 class="text-center ">En Çok Aranan Yurtlar</h1>
        </div>
    </div>

</div>

<h1 class="text-center mt-5 d-none d-lg-block d-xl-block slid">Popüler Yurtlar</h1>
<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-lg-4 mb-4 ps-5">
                <div class="card card_news" style="width: 18rem; background-color: white !important;">
                    <img src="@item.DormImage" class="card-img-top" style="border-radius:30px; padding:15px;" alt="...">
                    <div class="card-body text-center ">
                        <a href="/Dorm/DormDetails/@item.DormID"><h5 class="card-title">@item.DormName</h5></a>
                        <p class="card-text">@item.Description</p>

                    </div>
                </div>
            </div>

        }

    </div>
</div>

       

<!-- İtem-Card-End -->
