@model IEnumerable<EntityLayer.Concrete.SocialMedia>

@{
    ViewBag.Title = "AdminSocialMedia";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- ============================================================== -->
<!-- basic table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Sosyal Medya Bilgileri</h5>
        <div class="card-body">
            <a href="/Admin/SocialMediaNew/" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Sosyal Medya Hesabı Ekle</a>
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Sosyal Medya Adı</th>
                            <th>Sosyal Medya Linki</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.SocialMediaName</td>
                            <td>@item.SocialMediaLink</td>
                            <td><a href="/Admin/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-rounded btn-danger ">Sil</a></td>
                        </tr>

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end basic table  -->
<!-- ============================================================== -->
