@model IEnumerable<EntityLayer.Concrete.University>
@{
    ViewBag.Title = "AdminUniversity";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- ============================================================== -->
<!-- basic table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Üniversite Bilgileri</h5>
        <div class="card-body">
            <a href="/Admin/UniversityNew/" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Yeni Üniversite Ekle</a>
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Üniversite Adı</th>
                            <th>Resim Yolu</th>
                            <th>Sehir Adı</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@item.UniversityName</td>
                            <td>@item.Image</td>
                            <td>@item.City.CityName</td>
                            <td><a href="/Admin/DeleteProduct/@item.UniversityID" class="btn btn-rounded btn-danger ">Sil</a></td>
                            
                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end basic table  -->
<!-- ============================================================== -->
