@model IEnumerable<EntityLayer.Concrete.District>

@{
    ViewBag.Title = "DistrictList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- ============================================================== -->
<!-- basic table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Sehir Bilgileri</h5>
        <div class="card-body">
            <a href="/Admin/DistrictNew/" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Yeni İlçe Ekle</a>
            
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>İlce Adı</th>
                            <th>İl</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@item.DistrictName</td>
                            <td>@item.City.CityName</td>
                            <td><a href="/Admin/DeleteDistrict/@item.DiscritID" class="btn btn-rounded btn-danger ">Sil</a></td>


                        </tr>


                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end basic table  -->
<!-- ============================================================== -->
