@model EntityLayer.Concrete.University

@{
    ViewBag.Title = "UniversityNew";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form class="form-group" method="post">

    @Html.Label("Üniversitye Adı")
    @Html.TextBoxFor(x => x.UniversityName, new { @class = "form-control" })
    <br />
    @Html.Label("Resim Yolu")
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })

    <br />
    @Html.Label("Sehir")
    @Html.DropDownListFor(x => x.CityID, (List<SelectListItem>)ViewBag.values, new { @class = "form-control" })

    <button class="btn btn-rounded btn-success mt-3"> Kaydet</button>
</form>


