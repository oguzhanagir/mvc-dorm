@model IEnumerable<EntityLayer.Concrete.Dorm>
@{
    ViewBag.Title = "AdminDorm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- ============================================================== -->
<!-- basic table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Yurt Bilgileri</h5>
        <div class="card-body">
            <a href="/Admin/DormNew/" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Yeni Yurt Ekle</a>
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Yurt Adı</th>
                            <th>Yatak Sayısı</th>
                            <th>Wifi</th>
                            <th>Yemek</th>
                            <th>Açıklama</th>
                            <th>Adres</th>
                            <th>Website</th>
                            <th>Yetkili</th>
                            <th>Telefon</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                       {
                        <tr>
                            <td>@item.DormName</td>
                            <td>@item.Bed</td>
                            <td>@item.Wifi</td>
                            <td>@item.Meal</td>
                            <td>@item.Description</td>
                            <td>@item.Adress</td>
                            <td>@item.Website</td>
                            <td>@item.Advisior</td>
                            <td>@item.Phone</td>
                            <td><a href="/Admin/DeleteDorm/@item.DormID" class="btn btn-rounded btn-danger ">Sil</a></td>
                            <td><a href="/Admin/UpdateDorm/@item.DormID" class="btn btn-rounded btn-success">Güncelle</a></td>
                      
                        </tr>
                       }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end basic table  -->
<!-- ============================================================== -->
          

