@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "AdminComment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- ============================================================== -->
<!-- basic table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Yorum Bilgileri</h5>
        <div class="card-body">
            

            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Yorum Yapanın Adı</th>
                            <th>Yorum İcerigi</th>
                            <th>Yorum Yapılan Yurt</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.CommentName</td>
                                <td>@item.CommentText</td>
                                <td>@item.Dorm.DormName</td>

                                <td><a href="/Admin/DeleteComment/@item.CommentID" class="btn btn-rounded btn-danger ">Sil</a></td>
                            </tr>


                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end basic table  -->
<!-- ============================================================== -->