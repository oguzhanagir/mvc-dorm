@model IEnumerable<EntityLayer.Concrete.Sponsor>
@{
    ViewBag.Title = "AdminSponsor";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- ============================================================== -->
<!-- basic table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Sponsor Bilgileri</h5>
        <div class="card-body">
            <a href="/Admin/SponsorNew/" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Yeni Sponsor Ekle</a>
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Sponsor Adı</th>
                            <th>Sponsor Link</th>
                            <th>Resim Yolu</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.SponsorName</td>
                            <td>@item.SponsorLink</td>
                            <td>@item.SponsorImage</td>
                            <td><a href="/Admin/DeleteSponsor/@item.SponsorID" class="btn btn-rounded btn-danger ">Sil</a></td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end basic table  -->
<!-- ============================================================== -->
