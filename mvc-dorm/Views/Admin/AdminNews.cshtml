@model IEnumerable<EntityLayer.Concrete.News>

@{
    ViewBag.Title = "AdminNews";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- ============================================================== -->
<!-- basic table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
  
    <div class="card">
        <h5 class="card-header">Haber Bilgileri</h5>
        <div class="card-body">
            <a href="/Admin/NewsNew/" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Yeni Haber Ekle</a>
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Haber Başlığı</th>
                            <th>Haber Açıklaması </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NewsTitle</td>
                                <td>@item.NewsLink</td>
                                <td><a href="/Admin/DeleteNews/@item.NewsID" class="btn btn-rounded btn-danger ">Sil</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end basic table  -->
<!-- ============================================================== -->
