@model IEnumerable<EntityLayer.Concrete.City>

@{
    ViewBag.Title = "AdminCity";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!-- ============================================================== -->
<!-- basic table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Sehir Bilgileri</h5>
        <div class="card-body">
            <a href="/Admin/CityNew/" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Yeni Sehir Ekle</a>
  
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Sehir Adı</th>
                            <th>Sehir Resim Yolu</th>
                            
                         
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.CityName</td>
                                <td>@item.CityImage</td>                           
                                                         
                                <td><a href="/Admin/DeleteCity/@item.CityID" class="btn btn-rounded btn-danger ">Sil</a></td>
                            </tr>


                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end basic table  -->
<!-- ============================================================== -->
