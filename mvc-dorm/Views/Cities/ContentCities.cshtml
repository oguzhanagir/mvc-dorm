@model IEnumerable<EntityLayer.Concrete.City>
<!-- Cities-Card -->

<div class="container mt-lg-5 d-none d-lg-block d-xl-block me-5 ">
    <div class="row ms-5">
        <div class="container mt-lg-5 d-none d-lg-block d-xl-block me-5 ">
            <div class="row ms-5">
                <div class="col-8 ms-5">
                    @using (Html.BeginForm())
                    {
                        @Html.TextBox("p")
                        <input class="form-control" type="submit" aria-label="default input example">
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<div class="container me-5 mt-5">
    <div class="row">
   
    @foreach (var item in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4 mt-5">
            <a style="color: #20628d;  " href="/Cities/CitiesDetails/@item.CityID">
                <div style="width:250px; height:200px; background-color:aliceblue;border-radius:30px; padding:15px;">
                    <img src="@item.CityImage" style=" width:80px; height:80px; margin:auto;" />
                    <h4 class="text-center" style="padding-top:30px;">@item.CityName</h4>

                </div>
            </a>
        </div>
    }
</div>
</div>

<!-- Cities-Card-End -->
